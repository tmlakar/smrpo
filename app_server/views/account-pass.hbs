                                  x.type = "text";
                                } else {
                                  x.type = "password";
                                }
                              } --}}
                              $('#newpassword').passtrength({
                                    minChars: 12
                              });
                              $('#newpassword').passtrength({
                                passwordToggle: true,
                                
                                
                              });

                              $('#newpassword').passtrength({
                                tooltip: true,
                                textWeak: "Weak",
                                textMedium: "Medium",
                                textStrong: "Strong",
                                textVeryStrong: "Very Strong",
                              });
                              </script>
                          </div>
                          
                          <div class="mb-3">
                            <label class="form-label">Retype new password</label>
