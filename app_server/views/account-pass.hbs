    <div class="col-sm-9">
    <div class="card account-update">
      <div class="card-body">
        <h5 class="card-title">Change your password</h5>
        <form id="posodobi" method="post">
          
                            <div class="mb-3" hidden="true">
                            <label class="form-label">Id</label>
                            <input class="form-control input-form" name="username" placeholder="name" value="{{username}}" id="id" aria-describedby="emailHelp" required>

                          </div>
                           <div class="mb-3">
                            <label class="form-label">Old password</label>
                            <input class="form-control input-form" name="password" onCopy="return false" onpaste="return false;" id="oldpassword" type="password" value="{{password}}" pattern="(?!.* ).{12,128}" title="The password must be at least 12 characters long and shouldn't contain whitespaces!" aria-describedby="emailHelp" required>
                            {{!-- <input id="prikazi" style="margin-right: 10px;margin-top:20px;" type="checkbox" onClick="myFunction2()">Show Password --}}
                            <script>
                              {{!-- function myFunction2() {
                                var x = document.getElementById("oldpassword");
                                if (x.type === "password") {
                                  x.type = "text";
                                } else {
                                  x.type = "password";
                                }
                              } --}}
                              $('#oldpassword').passtrength({
                                    minChars: 12
                              });
                              $('#oldpassword').passtrength({
                                passwordToggle: true,
                               
                                
                              });

                              $('#oldpassword').passtrength({
                                tooltip: true,
                                textWeak: "Weak",
                                textMedium: "Medium",
                                textStrong: "Strong",
                                textVeryStrong: "Very Strong",
                              });
                              </script>
                          </div>
                          
                              
                          <div class="mb-3">
                            <label class="form-label">New password</label>
                            <input class="form-control input-form" name="newpassword" onCopy="return false" onpaste="return false;" id="newpassword" type="password" type="password" pattern="(?!.* ).{12,128}" title="The password must be at least 12 characters long and shouldn't contain whitespaces!" aria-describedby="emailHelp" required>
