        <!-- gumb za download -->
        <form method="post" action="/project/{{id}}/documentation-download">
        <button id="" onclick="saveFile()" type="submit" class="btn btn-dark dodaj-uporabnika fixed-bottom float-right" style="background-color: var(--c4) !important; border: 3px solid var(--c4) !important" ><a download><i class="fa-solid fa-download" style="color: var(--whitest) !important;"></i></a></button><br>
        </form>
        
        <script>
            document.getElementById('myFile')
            .addEventListener('change', function() {
              
            var fr=new FileReader();
            fr.onload=function(){
                document.getElementById('output')
                        .textContent=fr.result;
            }
              
            fr.readAsText(this.files[0]);
            })

            

            $(document).on("click", "#uploadFile", function () {
