    <h5 class="card-title">My user data</h5>
    
    <div><button id="posodobitev" type="button" data-toggle="modal"
                data-target="#modalnoOknoPosodobi" class="btn btn-dark">Edit my user info</button></div><br>

{{!-- modalno okno za posodobitev podatkov --}}
    <div class="modal fade" id="modalnoOknoPosodobi" tabindex="-1" role="dialog"
                   aria-labelledby="exampleModalLabel" aria-hidden="true">
                   <div class="modal-dialog" role="document">
                     <div class="modal-content">
                      <div class="modal-header">
                         <h5 class="modal-title" id="exampleModalLabel">Edit my info</h5>
                         <button type="button" class="close" data-dismiss="modal"
                           aria-label="Close">
                           <span aria-hidden="true">&times;</span>
                         </button>
                      </div>
                      <div class="modal-body">
                        
                        <form id="posodobiUporabnika" method="post" style="padding-top: 60px  !important;">

                          <div class="mb-3">
                            <label class="form-label">Name</label>
                          <input class="form-control" name="name" value="{{name}}" id="name" aria-describedby="emailHelp">
                            
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Surname</label>
                            <input class="form-control" name="surname" value="{{surname}}" id="surname" aria-describedby="emailHelp">
                            
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input class="form-control" name="username" value="{{username}}" id="username" aria-describedby="emailHelp">
                            
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="email" value="{{email}}" id="email" aria-describedby="emailHelp">
                            
                          </div>
                          <div class="mb-3">
                            
                          </div>
                        <button type="submit" id="posodobiUporabnika" class="btn btn-primary" onclick="posodobiUserja()">Potrdi</button>
                        <br>
                            <div><button id="posodobitev" type="button" data-toggle="modal"
                      data-target="#modalnoOknoPosodobiGeslo" class="btn btn-dark">Edit password</button></div><br>
                        </form>
                        </div>
                        
                      </div>
                      <form>
                      <div class="modal-footer">
                         
                         
                         </form>
                      </div>
                      </div>
                      </div>
                      
                      
                     
