            <div class="row">
            <div class="col-lg-1" style="padding-right: 0px !important; margin-right: 0px !important; padding-left: 0px !important; margin-left: 0px !important;">
              <button class="btn btn-delete-comment" data-toggle="modal" data-target="#modalDeleteComment" style="padding: 0px!important; margin-left: -30px !important; float: left !important;"><i class="bi-trash-fill" style="font-size:13px"></i></button>
              <button class="btn commentOwner_circle" style="float: right !important;">N</button>
            </div>


            <!-- komentarji -->
            <div class="col-lg-11" style="padding-left: 0px !important; margin-left: 0px !important;">
            <div class="publi-font" style="margin-top: 10px !important;">Komentar 1</div>
            <div class="publi-font" style="font-size: 12px !important; margin-top: 5px !important; margin-bottom: 15px !important;">14.4.2022</div>
            </div>

            </div>
            
            </div>
            

            <!-- Gumba za delete in dodaj komentar -->
