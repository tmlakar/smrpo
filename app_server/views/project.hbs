{{!-- Product backlog / sprints zavihka --}}

<div class="hbses">

<h3>{{name}}</h3>


<div class="">
  <ul class="nav nav-tabs">

    <li class="active"><a class="nav-link" data-toggle="tab" href="#backlog" onclick="location.href='#backlog'">Product backlog</a></li>
    <li><a class="nav-link" data-toggle="tab" href="#sprints" onclick="location.href='#sprints'">Sprints</a></li>

  </ul>

  <div class="tab-content">
    <div id="backlog" class=" active tab-pane fade">
      <h3>Product backlog</h3>
      <div class="card-group">
      <div class="row">
    {{#each stories as |story|}}


        <div class="card projekt-card" style="margin: 20px !important;
        background-color: var(--c4); border: 4px solid var(--c4) !important;">
          <div class="card-body">
            <!-- Zaporedna št tukaj pred imenom? -->
            <a href="/project/{{story._id}}" style="color: orange"><h4><i>{{story.name}}</i></h4></a>
            <br>
            <p>{{story.info}}</p>
            <p></p>
            <a href="/projects/{{story._id}}"><button type="button" class="btn submit-form btn-dark"
            style="background-color: var(--c5) !important">Edit</button></a></td> <!-- ANJA poveži modalno okno -->

          </div>
        </div>
        <!-- modalno okno tukaj? -->
    {{/each}}

      </div>
      </div>
      <div><a href="/story-new"><button id="" type="button" class="btn btn-dark dodaj-uporabnika fixed-bottom float-right" style="background-color: var(--c1) !important; border: 3px solid var(--c1) !important"><i class="fa-solid fa-plus dodaj"></i></button></a></div><br>
    </div>
    <div id="sprints" class="tab-pane fade">
      {{!---prikaz dodanih sprintov, ki se jih pridobi iz apija --}}
      {{#each sprints as |sprint|}}
          <div class="card projekt-card col-sm-3" style="margin: 20px !important;
          background-color: var(--c4); border: 4px solid var(--c4) !important;">
            <div class="card-body">
              <h4 style="color: white">Sprint {{sprint.number}}</h4>
              <p>{{sprint.startDate}}-{{sprint.endDate}}</p>
              <br>
              <p>Sprint size:</p>
              <p>{{sprint.sprintSize}}</p>
              <p></p>
            </td>

            </div>
          </div>
        {{!-- gumba za edit projectov --}}
      {{/each}}
      {{#if admin}}
        {{!-- gumb za dodajanje novega sprinta - se pokaže le če je prijavljen admin--}}
        <div><a href="/sprint-new/{{id}}"><button id="" type="button" class="btn btn-dark dodaj-uporabnika fixed-bottom float-right"><i class="fa-solid fa-plus dodaj"></i></button></a></div><br>
      {{/if}}
    </div>

  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
    var anchorHash = window.location.href.toString();
    if( anchorHash.lastIndexOf('#') != -1 ) {
        anchorHash = anchorHash.substr(anchorHash.lastIndexOf('#'));
        if( $('a[href="'+ anchorHash +'"]').length > 0 ) {
            $('a[href="'+ anchorHash +'"]').trigger('click');
        }
    }
});
</script>

</div>
