                                  x.type = "text";
                                } else {
                                  x.type = "password";
                                }
                              } --}}

                              $('#newpassword').passtrength({
                                    minChars: 12
                              });
                              $('#newpassword').passtrength({
                                passwordToggle: true,
                               
                                
                              });

                              $('#newpassword').passtrength({
                                tooltip: true,
                                textWeak: "Weak",
                                textMedium: "Medium",
                                textStrong: "Strong",
                                textVeryStrong: "Very Strong",
                              });
                              </script>
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Retype new password</label>
                            <input class="form-control input-form" name="password_retype" onCopy="return false" onpaste="return false;" id="password1" type="password" pattern="(?!.* ).{12,128}" title="The password must be at least 12 characters long and shouldn't contain whitespaces!" aria-describedby="emailHelp" required>
